@model AppUserModel

@{
	ViewData["title"] = "Create User";
}

<h1>Creat User</h1>
<div class="col-md-9">
	<form asp-action="Create" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>UserName</label>
			<input asp-for="UserName" required class="form-control" />
			<span asp-validation-for="UserName" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Email</label>
			<input asp-for="Email" required class="form-control" />
			<span asp-validation-for="Email" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Phone Numble</label>
			<input asp-for="PhoneNumber" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger" />
		</div>


		<div class="form-group">
			<label>Password</label>
			<input asp-for="PasswordHash" class="form-control" />
			<span asp-validation-for="PasswordHash" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Roles</label>
			<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
			</select>
			<span asp-validation-for="RoleId" class="text-danger" />
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Create</button>
		</div>
	</form>
	<a asp-action="Index">Back to List User</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}



